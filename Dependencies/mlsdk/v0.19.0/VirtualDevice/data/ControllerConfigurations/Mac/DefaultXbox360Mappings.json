{
  "ManifestType": "Configuration",
  "DeviceName": "Xbox360Controller",
  "DeviceLabel": "Xbox 360 Controller",
  "ConfigurationSettings": {
    "BindingsVersion": 2,
    "DeviceType": "controller",
    "OS": "Mac",
    "ActionInputLabels" : {
      "Axis-0": "Left thumbstick X-Axis",
      "Axis-1": "Left thumbstick Y-Axis",
      "Axis-2": "Right thumbstick X-Axis",
      "Axis-3": "Right thumbstick Y-Axis",
      "Axis-4": "Left trigger",
      "Axis-5": "Right trigger",
      "Button-0": "D-pad up",
      "Button-1": "D-pad down",
      "Button-2": "D-pad left",
      "Button-3": "D-pad right",
      "Button-4": "Start button",
      "Button-5": "Back button",
      "Button-6": "Left thumbstick click",
      "Button-7": "Right thumbstick click",
      "Button-8": "Left bumper",
      "Button-9": "Right bumper",
      "Button-10": "Xbox button",
      "Button-11": "'A' button",
      "Button-12": "'B' button",
      "Button-13": "'X' button",
      "Button-14": "'Y' button"
    },
    "Action-MoveHeadposeX": [{"Input":"Axis-0"}],
    "Action-MoveHeadposeZ": [{"Input":"Axis-1"}],
    "Action-RotateHeadposeX": [{"Input":"Axis-3"}],
    "Action-RotateHeadposeY": [{"Input":"Axis-2"}],
    "Action-ToggleAbsoluteHeadposeMovement": [{"Input":"Button-14"}], // Y-button on Xbox controller.
    "Action-HandGestureThumbLeft": [{"Input":"Button-8"}], // Left bumper.
    "Action-HandGestureThumbRight": [{"Input":"Button-9"}], // Right bumper.
    "Action-MoveInputControllerNegX": [{"Input":"Button-2"}], // D-pad left.
    "Action-MoveInputControllerPosX": [{"Input":"Button-3"}], // D-pad right.
    "Action-MoveInputControllerNegZ": [{"Input":"Button-0"}], // D-pad up.
    "Action-MoveInputControllerPosZ": [{"Input":"Button-1"}], // D-pad down.
    "Action-ResetInputControllerTransform": [{"Input":"Button-12"}], // B-button.
    "Action-RotateInputControllerX": [{"Input":"Axis-4"}], // Left trigger.
    "Action-InputControllerTrigger": [{"Input":"Axis-5"}], // Right trigger.
    "Action-ResetEyeFixation": [{"Input":"Button-6"}], // Left thumbstick click.
    "Action-InputControllerGestureTap": [{"Input":"Button-11"}], // A-button.
    "Axis-Deadzone-1": 0.2,
    "Axis-Deadzone-2": 0.2,
    "Axis-Deadzone-3": 0.2,
    "Global-Axis-Sensitivity":1.0
  }
}
